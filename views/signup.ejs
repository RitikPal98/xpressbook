<%-include('partials/header');-%>
<style media="screen">
  body{background-image:linear-gradient(to right,#097770,#079997,#097770)}

  .form-signin{width:100%;max-width:330px;padding:15px;margin:auto}.form-signin .checkbox{font-weight:400}.form-signin .form-control{position:relative;box-sizing:border-box;height:auto;padding:10px;font-size:16px}.form-signin .form-control:focus{z-index:2}.form-signin input[type=email]{margin-bottom:-1px;border-bottom-right-radius:0;border-bottom-left-radius:0}.form-signin input[type=password]{margin-bottom:10px;border-top-left-radius:0;border-top-right-radius:0}.bd-placeholder-img{font-size:1.125rem;text-anchor:middle;-webkit-user-select:none;-moz-user-select:none;-ms-user-select:none;user-select:none}@media (min-width:768px){.bd-placeholder-img-lg{font-size:3.5rem}}

  </style>
  <form id="signupForm"  action="/signup" method="post" class="form-signin">
    <input type="text" class="form-control inputSpacing" name="fullName" value="" placeholder="Full name" required autocomplete="off" autofocus>
    <input type="user" class="form-control inputSpacing" name="username" value="" placeholder="User name" autocomplete="off" required>
    <input id="userEmail" name="userEmail" type="email" id="inputEmail" class="form-control inputSpacing" placeholder="Email address" required>
  <input name="password" type="password" id="inputPassword" class="form-control inputSpacing"
  placeholder="Creat Password"  autocomplete="off" required>
  <br>
  <button id="loginOrSignup" class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
<br>
<p style="padding-left:50px;color:#ccc">Already have an account?
   <a style="color:aqua" href="/user/LogIn">LOG IN</a>
</p>
<div >
  <div class="or">OR</div>
    <hr>
</div>
  </form>
  <div class="col-sm-12 ">
  <div class="col-sm-4">
  </div>

    <div  class="col-sm-4">
      <div class="card">
        <div class="card-body">
          <a class="btn btn-block btn-social btn-google" href="/auth/google" role="button">
            <i class="fab fa-google"></i>
            Sign up with Google
          </a>
        </div>

      </div>
  </div>
  </div>


  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="/scripts/script.js" charset="utf-8"></script>
  </body>

  </html>
